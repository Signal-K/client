{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "types": ["cypress", "node"],
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ],
      "react": [ "./node_modules/@types/react" ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "cypress/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/_[archive]/Classifications/Zoodex/CapturePage.jsx",
    "src/app/components/_[archive]/Classifications/Zoodex/Mobx.jsx",
    "components/topographic-map.jsx",
    "components/enhanced-weather-events.jsx", "content/Comments/SurveyorForm.tsx.tst",
  ],
  "exclude": [
    "node_modules",
    "src/app/components/Data/Generator/Astronomer/DailyMinorPlanet.tsx"
  ]
}
